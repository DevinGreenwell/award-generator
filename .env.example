# Coast Guard Award Generator Configuration
# Copy this file to .env and update with your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini-2024-07-18
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_or_leave_blank_for_random

# Session Configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=./sessions
SESSION_LIFETIME=86400

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Export Configuration
EXPORT_TEMP_DIR=./temp
MAX_EXPORT_SIZE=10485760

# Security Configuration
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# For production, use more restrictive values:
# FLASK_ENV=production
# FLASK_DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com